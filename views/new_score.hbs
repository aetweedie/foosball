<form class="form-horizontal" action="/scores/add" method="post">
  <fieldset>
    <legend>Add Score</legend>
    <div class="form-group">
      <label for="mikeScore" class="col-lg-2 control-label">Mike</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="mikeScore" placeholder="# of Points" name="mike_score">
      </div>
    </div>
    <div class="form-group">
      <label for="alanScore" class="col-lg-2 control-label">Alan</label>
      <div class="col-lg-10">
        <input type="text" class="form-control" id="alanScore" placeholder="# of Points" name="alan_score">
      </div>
    </div>
    <div class="form-group">
      <div class="col-lg-10 col-lg-offset-2">
        <button type="reset" class="btn btn-default">Cancel</button>
        <button type="submit" class="btn btn-primary">Submit</button>
      </div>
    </div>
  </fieldset>
</form>
